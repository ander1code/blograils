<div class="container">
   <div class="row">
      <div class="col-md-8">
         <h1>Edit Post</h1>
      </div>
      </div>
   <div class="row">
      <div class="col-md-8">
         <%= form_for @post, :html => { multipart: true } do |f| %>
         <div class="form-group">
            <% if @post.errors.any? %>
            <div id="error_explanation">
               <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
               <ul>
                  <% @post.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
               </ul>
            </div>
            <% end %>
         </div>
         <div class="form-group">
            <%= f.hidden_field :user_id, :value => @user_id, :class => 'form-control'  %>
         </div>
         <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, :class => 'form-control' %>
         </div>
         <div class="form-group">
            <%= f.label :briefing %>
            <%= f.text_field :briefing, :class => 'form-control' %>
         </div>
         <div class="form-group">
            <%= f.label :text %>
            <%= f.text_area :text, :class => 'form-control', :rows => 15 %>
         </div>
         <div class="form-group">
            <label for="">Current Image:</label>
            <a href="<%= @post.avatar.url %>">IMAGE</a>
         </div>
         <div class="form-group">
            <label for="">Image</label>
            <%= f.file_field :avatar, :class => 'form-control' %>
         </div>
         <div class="form-group">
            <button type="button" class="btn btn-warning col-md-2 pull-right" data-toggle="modal" data-target="#mdEdit">Edit</button>
            <%= link_to 'Back', posts_path, :class=>'btn btn-info col-md-2 pull-right' %>
            <button type="button" class="btn btn-danger col-md-2 pull-right" data-toggle="modal" data-target="#mdDelete">Delete</button>
         </div>
         <div id="mdDelete" class="modal fade" role="dialog">
           <div class="modal-dialog">
             <div class="modal-content">
               <div class="modal-header">
                 <button type="button" class="close" data-dismiss="modal">&times;</button>
                 <h4 class="modal-title">Question</h4>
               </div>
               <div class="modal-body">
                 <p>Do you want delete this post?</p>
               </div>
               <div class="modal-footer">
                 <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                 <%= link_to 'Yes', @post, method: :delete, :class => 'btn btn-danger'  %>
               </div>
             </div>
           </div>
         </div>
         <div id="mdEdit" class="modal fade" role="dialog">
           <div class="modal-dialog">
             <div class="modal-content">
               <div class="modal-header">
                 <button type="button" class="close" data-dismiss="modal">&times;</button>
                 <h4 class="modal-title">Question</h4>
               </div>
               <div class="modal-body">
                 <p>Do you want edit this post?</p>
               </div>
               <div class="modal-footer">
                 <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                 <%= f.submit nil, :class => 'btn btn-warning', :value => 'Yes'%>
               </div>
             </div>
           </div>
         </div>
         <% end %>
      </div>
   </div>
</div>



